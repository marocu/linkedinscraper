{
  "manifest_version": 2,
  "name": "LinkedIn Company Scraper",
  "version": "0.0.1",

  "background": {
    "scripts": [
      "vendor/jquery/dist/jquery.js",
      "vendor/async/lib/async.js",
      "scripts/helper.js",
      "scripts/background/bg_transponder.js",
      "scripts/static/bundle.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/vendor/dist/jquery.js",
        "scripts/helper.js",
        "scripts/content/ct_transponder.js",
        "scripts/content/site_hooks.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
