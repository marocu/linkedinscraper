{
  "manifest_version": 2,
  "name": "LinkedIn Company Scraper",
  "version": "0.0.1",

  "background": {
    "scripts": [
      "scripts/vendor/jquery-2.1.1.min.js",
      "scripts/helper.js",
      "scripts/background/static.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/vendor/jquery-2.1.1.min.js",
        "scripts/helper.js",
        "scripts/content/ct_transponder.js",
        "scripts/content/site_hooks.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
